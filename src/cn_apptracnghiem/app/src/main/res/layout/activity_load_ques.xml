<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <!-- Header Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <!-- Question Number -->
        <TextView
            android:id="@+id/tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu hỏi 1/40"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="start" />

        <!-- Score -->
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

    <!-- Question Content -->
    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Câu hỏi sẽ xuất hiện ở đây"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <!-- Answer Choices -->
    <RadioGroup
        android:id="@+id/radioGroup_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rb_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 1"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 2"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 3"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lựa chọn 4"
            android:textSize="18sp" />

    </RadioGroup>

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60s"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="20dp" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

</LinearLayout>
